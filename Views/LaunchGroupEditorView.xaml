<UserControl x:Class="SideLauncher.Views.LaunchGroupEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sideLauncher="clr-namespace:SideLauncher"
             xmlns:viewModels="clr-namespace:SideLauncher.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:LaunchGroupEditorViewModel}"
             xmlns:local="clr-namespace:SideLauncher.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <FontFamily x:Key="FontIcoFont">/Fonts/icofont.ttf#icofont</FontFamily>
        <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Margin="10">
            <Grid DockPanel.Dock="Top">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" Grid.Column="0" Margin="0,10,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Executable Path" Margin="0,5,5,0"/>
                    <TextBox Grid.Column="1" Text="{Binding Group.AppExePath, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"/>
                    <Button Grid.Column="2" Content="&#xec5b;" Command="{Binding SelectAppCmd}" Margin="5,0,0,0" FontFamily="{DynamicResource FontIcoFont}"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="0" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Text="Executable Args" Margin="0,5,5,0" />
                    <TextBox Grid.Column="1" Text="{Binding Group.AppExeArgs, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Grid Grid.Row="2" Grid.Column="0" Margin="0,10,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="0" Text="Launch Delay" Margin="0,5,20,0" />
                    <TextBox Grid.Column="1" Text="{Binding Group.LaunchDelay, UpdateSourceTrigger=PropertyChanged}" Width="Auto" MinWidth="100"/>
                </Grid>
                <Grid Grid.Row="0" Grid.Column="1" Margin="0,10,0,10">
                    <CheckBox Margin="15,5,0,0" Content="Enabled" IsChecked="{Binding Group.Enabled, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
                <Grid Grid.Row="1" Grid.Column="1" Margin="0,10,0,10">
                    <CheckBox Margin="15,5,0,0" Content="Auto-Close" IsChecked="{Binding Group.AutoClose, UpdateSourceTrigger=PropertyChanged}"/>
                </Grid>
            </Grid>
            <GroupBox Header="Condition Groups:" Margin="0,25,0,0">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
                        <Button Content="Add" Command="{Binding AddConditionGroupCmd}" Margin="5"/>
                        <Button Content="Remove" Command="{Binding RemoveConditionGroupCmd}" CommandParameter="{Binding SelectedItem, ElementName=GridConditionGroups}" Margin="5"/>
                        <Button Content="Edit" Command="{Binding EditConditionGroupCmd}" CommandParameter="{Binding SelectedItem, ElementName=GridConditionGroups}" Margin="5"/>
                    </StackPanel>
                    <DataGrid Name="GridConditionGroups" DockPanel.Dock="Top"
                          ItemsSource="{Binding Group.ConditionGroups}"
                          CanUserAddRows="False" CanUserResizeRows="False" AutoGenerateColumns="False" GridLinesVisibility="None" SelectionMode="Single" Height="200" Width="600">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Not" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding Not, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Conditions" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ToFilterString}" TextWrapping="Wrap"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Operator With Next" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox Name="JoinTypeSelect" DisplayMemberPath="Key" SelectedValuePath="Value" 
                                                  SelectedValue="{Binding Joiner, UpdateSourceTrigger=PropertyChanged}" 
                                                  ItemsSource="{Binding DataContext.JoinMethodsDict, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,15">
            <Button Content="Save" Command="{Binding SaveCommand}" Margin="5"
            CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}" IsDefault="True" />
            <Button Content="Cancel" IsCancel="True" Margin="5"/>
        </StackPanel>
    </DockPanel>
</UserControl>
